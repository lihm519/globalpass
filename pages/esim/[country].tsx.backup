import Head from 'next/head';
import { GetStaticPaths, GetStaticProps } from 'next';
import packageData from '@/public/data/esim-packages.json';

interface ESIMPackage {
  id: number;
  provider: string;
  country: string;
  plan_name: string;
  data_type: string;
  data_amount: string;
  validity: string;
  price: number;
  network: string;
  link: string;
  last_checked: string;
}

interface PackageData {
  packages: Record<string, ESIMPackage[]>;
}

interface PageProps {
  country: string;
  countryName: string;
  packages: ESIMPackage[];
  cheapestPackage: ESIMPackage | null;
  priceRange: { low: number; high: number } | null;
  maxDataPackage: ESIMPackage | null;
  currentDate: string;
}

// Normalize country name from URL slug to display name
function normalizeCountryName(slug: string): string {
  const titleCase = slug.split('-').map(word => 
    word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()
  ).join(' ');
  
  const specialCases: Record<string, string> = {
    'Usa': 'USA',
    'Uk': 'UK',
  };
  
  return specialCases[titleCase] || titleCase;
}

// Convert country name to slug
function countryToSlug(country: string): string {
  return country.toLowerCase().replace(/\s+/g, '-');
}

// Generate static paths for all countries at build time
export const getStaticPaths: GetStaticPaths = async () => {
  const data = packageData as PackageData;
  const countries = Object.keys(data.packages);
  
  const paths = countries.map(country => ({
    params: { country: countryToSlug(country) }
  }));
  
  return {
    paths,
    fallback: false // No fallback - all pages are pre-generated
  };
};

// Fetch data for each country at build time
export const getStaticProps: GetStaticProps<PageProps> = async ({ params }) => {
  const country = params?.country as string;
  const countryName = normalizeCountryName(country);
  const data = packageData as PackageData;
  const packages = data.packages[countryName] || [];
  
  // Calculate cheapest package
  const cheapestPackage = packages.length > 0 
    ? packages.reduce((min, pkg) => pkg.price < min.price ? pkg : min)
    : null;
  
  // Calculate price range
  const priceRange = packages.length > 0 ? {
    low: Math.min(...packages.map(p => p.price)),
    high: Math.max(...packages.map(p => p.price))
  } : null;
  
  // Find package with most data
  const maxDataPackage = packages.length > 0
    ? packages.reduce((max, pkg) => {
        const maxData = parseFloat(max.data_amount);
        const pkgData = parseFloat(pkg.data_amount);
        return pkgData > maxData ? pkg : max;
      })
    : null;
  
  // Get current date for FAQ
  const currentDate = new Date().toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
  
  return {
    props: {
      country,
      countryName,
      packages,
      cheapestPackage,
      priceRange,
      maxDataPackage,
      currentDate
    }
  };
};

